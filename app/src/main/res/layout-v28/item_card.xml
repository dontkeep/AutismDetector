<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.google.android.material.card.MaterialCardView
    android:layout_height="250dp"
    android:layout_width="200dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_marginStart="16dp"
    android:outlineAmbientShadowColor="@color/cardview_light_background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/what_is_autism"
        android:textStyle="bold"
        />

      <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/autism_or_autism_spectrum_disorder_asd_refers_to_a_broad_range_of_conditions_characterized_by_challenges_with_social_skills_repetitive_behaviors_speech_and_nonverbal_communication"
        android:textStyle="normal"
        android:textAlignment="center"
        />
    </LinearLayout>


  </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>