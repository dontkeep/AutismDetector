<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.questions.FirstBatchActivity"
  android:id="@+id/main">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question1"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/auto_complete1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question2"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question3"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question4"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question5"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/auto_complete5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none"
        tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question6"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question7"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question8"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question9"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question9"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/question10"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/question10"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
      <AutoCompleteTextView
        android:id="@+id/auto_complete10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answers"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
      android:id="@+id/btn_next"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/next_page"
      style="@style/Widget.Material3.Button.TonalButton"
      android:layout_margin="16dp"
      />
  </LinearLayout>
</ScrollView>